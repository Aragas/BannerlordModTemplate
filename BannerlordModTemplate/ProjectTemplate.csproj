<Project Sdk="Microsoft.NET.Sdk">
  <!-- Main Project Properties -->
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <PlatformTarget Condition=" '$(PlatformTarget)' == '' ">x64</PlatformTarget>
    <ProductVersion>8.0.30703</ProductVersion>
    <SchemaVersion>2.0</SchemaVersion>
    <ProjectGuid>$guid1$</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>$safeprojectname$</RootNamespace>
    <AssemblyName>$safeprojectname$</AssemblyName>
    <TargetFrameworkVersion>v$targetframeworkversion$</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
  </PropertyGroup>
  <!-- Debug Configuration Properties -->
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>$BannerlordDirectory$\Modules\$safeprojectname$\bin\Win64_Shipping_Client</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <!-- Release Configuration Properties -->
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>$BannerlordDirectory$\Modules\$safeprojectname$\bin\Win64_Shipping_Client</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <!-- Debugging Properties -->
  <!-- Obsolete; Used for .NET Framework, seemingly not supported by .NET Core? Left it in case of making 2 separate branches instead. New settings are nastily generated in TemplateWizard.cs
  <PropertyGroup>
    <StartAction>Program</StartAction>
    <StartProgram>$BannerlordExecutable$</StartProgram>
    <StartArguments>$BannerlordDebugArgs$</StartArguments>
    <StartWorkingDirectory>$BannerlordDirectory$\bin\Win64_Shipping_Client</StartWorkingDirectory>
  </PropertyGroup>
  -->
  <!-- Bannerlord Native Assemblies -->
  <ItemGroup>
    <Reference Include="$BannerlordDirectory$\bin\Win64_Shipping_Client\TaleWorlds*.dll">
      <HintPath>%(Identity)</HintPath>
      <Private>False</Private>
    </Reference>
    <!-- Bannerlord Module Assemblies  -->
    <Reference Include="$BannerlordDirectory$\Modules\Native\bin\Win64_Shipping_Client\TaleWorlds*.dll">
      <HintPath>%(Identity)</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="$BannerlordDirectory$\Modules\SandBox\bin\Win64_Shipping_Client\SandBox*.dll">
      <HintPath>%(Identity)</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="$BannerlordDirectory$\Modules\StoryMode\bin\Win64_Shipping_Client\StoryMode*.dll">
      <HintPath>%(Identity)</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="$BannerlordDirectory$\Modules\CustomBattle\bin\Win64_Shipping_Client\TaleWorlds*.dll">
      <HintPath>%(Identity)</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
  <!-- Files & Classes -->
  <ItemGroup>
    <Content Include="SubModule.cs" />
    <Content Include="Properties\AssemblyInfo.cs" />
    <Content Include="Readme.txt"/>
    <Content Include="SubModule.xml"/>
  </ItemGroup>
  <!-- Post-Build -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /d /y &quot;$(MSBuildProjectDirectory)\SubModule.xml&quot; &quot;$BannerlordDirectory$\Modules\$safeprojectname$&quot;"/>
  </Target>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>
